@using VoorbeeldFormulieren.ViewModels

@model RegistrerenViewModel

<div class="row">
    <div class="col-md-4">
        <form asp-controller="Formulier" asp-action="Registreren" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Gebruiker.Voornaam" class="control-label"></label>
                <input asp-for="Gebruiker.Voornaam" class="form-control" />
                <span asp-validation-for="Gebruiker.Voornaam" class="text-danger"/>
            </div>
            <div class="form-group">
                <label asp-for="Gebruiker.Familienaam" class="control-label"></label>
                <input asp-for="Gebruiker.Familienaam" class="form-control">
                <span asp-validation-for="Gebruiker.Familienaam" class="text-danger"/>
            </div>
            <div class="form-group">
                <label asp-for="Gebruiker.Geboortedatum" class="control-label"></label>
                <input asp-for="Gebruiker.Geboortedatum" class="form-control">
                <span asp-validation-for="Gebruiker.Geboortedatum" class="text-danger" />
            </div>
            <div class="form-group">
                <label asp-for="Gebruiker.Geslacht" class="control-label"></label>
                <div class="form-check">
                    <input asp-for="Gebruiker.Geslacht" type="radio" value="Man" class="form-check-input" checked>
                    <label class="form-check-label">Man</label>
                </div>
                <div class="form-check">
                    <input asp-for="Gebruiker.Geslacht" type="radio" value="Vrouw" class="form-check-input">
                    <label class="form-check-label">Vrouw</label>
                </div>
                <div class="form-check">
                    <input asp-for="Gebruiker.Geslacht" type="radio" value="Nonbinair" class="form-check-input">
                    <label class="form-check-label">Non binair</label>
                </div>
                <span asp-validation-for="Gebruiker.Geslacht" class="text-danger" />
            </div>
            <div class="form-group">
                <input asp-for="Bestand" type="file" class="form-control"/>
            </div>
            <br/>
            <div class="form-group">
                <input type="submit" value="Registreer" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}